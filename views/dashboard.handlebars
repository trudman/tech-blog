  {{#if posts.length}}
  <div class="col-md-6 post-list">
    <h3>{{username}} Posts</h3>

    {{#each posts as |post|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4>>{{post.title}}</a></h4>
      </div>
      <div class="col-md-4" >
        Created by
        {{post.user.username}}
        on
        {{format_date post.date_created}}
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>